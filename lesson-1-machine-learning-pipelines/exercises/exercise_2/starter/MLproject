  main:
    parameters:
      file_url:
        description: url of the file
        type: uri
      artifact_name:
        description: name of te artifaact
        type: str
      artifact_type:
        description: the type of the artifact
        type: str
      artifact_description:
        description: describe what this artifact means
        type: str
